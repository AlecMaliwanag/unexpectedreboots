{
  "manifest_version": 2,
  "name": "markable",
  "description": "markup, sharing, and highlighting extension",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "views/index.html"
  },

   "web_accessible_resources" :[
      "dropdownDashBaord.html"
  ],

   "background": {
     "scripts": [
       "lib/jquery.min.js",
       "app/scripts/background.js"
     ]
   },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["lib/medium-editor/dist/css/medium-editor.css"],
      "js": [
        "lib/jquery.min.js",
        "lib/medium-editor/dist/js/medium-editor.js",
        "lib/MediumButton.js", 
        "app/scripts/selectionScript.js"
      ]
    }
  ],


  "permissions": [
    "activeTab",
    "identity",
    "storage",
    "cookies","<all_urls>", "http://*/*", "tabs"
  ]
}
