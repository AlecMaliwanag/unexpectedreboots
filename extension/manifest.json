{
  "manifest_version": 2,

  "name": "unexpected-reboots",
  "description": "highlighting extensions",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "views/index.html"
  },


  "background": {
    "scripts": ["rebootBackground.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["rebootContent.js"]
    }
  ],

  "permissions": [

    "http://*/*",
    "https://*/*",
    "activeTab",
    "permissions"
  ]

 
}
